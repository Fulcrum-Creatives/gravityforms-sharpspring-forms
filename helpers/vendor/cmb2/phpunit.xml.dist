<phpunit
	bootstrap                   = "tests/bootstrap.php"
	backupGlobals               = "false"
	colors                      = "true"
	convertErrorsToExceptions   = "true"
	convertNoticesToExceptions  = "true"
	convertWarningsToExceptions = "true"
	verbose                     = "true"
	>
	<testsuites>
		<testsuite>
			<directory gfssf="test-" suffix=".php">./tests/</directory>
		</testsuite>
	</testsuites>
</phpunit>
